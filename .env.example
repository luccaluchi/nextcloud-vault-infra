# === BANCO DE DADOS (PostgreSQL) ===
# Nome do banco de dados (Ex: nextcloud)
POSTGRES_DB='nextcloud'
# Usuário do banco de dados
POSTGRES_USER='nextcloud_user'
# Senha forte para o banco de dados
POSTGRES_PASSWORD=''

# === NEXTCLOUD ADMIN ===
# Usuário administrador inicial do Nextcloud
NEXTCLOUD_ADMIN_USER=''
# Senha do administrador (Mínimo 8 caracteres)
NEXTCLOUD_ADMIN_PASSWORD=''

# === TAILSCALE ===
# Chave de autenticação (Gere no painel do Tailscale: Settings > Keys)
TS_AUTHKEY='tskey-auth-REPLACE_ME'
# Nome que o servidor terá na rede Tailscale
TS_HOSTNAME='nextcloud'
# Nome da sua rede no Tailscale (Encontrado no Admin Console > DNS)
TS_TAILNET_NAME='NOME_DA_SUA_REDE.ts.net'

# === CONFIGURAÇÕES DE PERFORMANCE ===
# Limite de memória do PHP (Recomendado: 1G ou mais)
PHP_MEMORY_LIMIT='1G'
# Tamanho máximo de upload permitido
PHP_UPLOAD_LIMIT='16G'